generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id        String   @id @default(cuid())
  name      String
  capacity  Int
  features  String[] @default([])
  createdAt DateTime @default(now())
}

model Asset {
  id            String   @id @default(cuid())
  name          String
  inventoryCode String?
  status        String   @default("available")
  createdAt     DateTime @default(now())
}

model Booking {
  id           String   @id @default(cuid())
  resourceType String   // "room" or "asset"
  resourceId   String
  title        String
  notes        String?
  start        DateTime
  end          DateTime
  createdAt    DateTime @default(now())
}