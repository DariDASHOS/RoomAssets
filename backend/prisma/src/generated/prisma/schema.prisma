generator client {
  provider  = "prisma-client-js"
  output    = "./src/generated/prisma"
  transpile = true
}

datasource db {
  provider = "postgresql"
}

// Сущность User
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
}

model Room {
  id        String   @id @default(cuid())
  name      String
  capacity  Int
  features  String[] @default([])
  createdAt DateTime @default(now())
}

model Asset {
  id            String   @id @default(cuid())
  name          String
  inventoryCode String?
  status        String   @default("available")
  createdAt     DateTime @default(now())
}

model Booking {
  id           String   @id @default(cuid())
  resourceType String // "room" or "asset"
  resourceId   String
  title        String
  notes        String?
  start        DateTime
  end          DateTime
  createdAt    DateTime @default(now())
}
